<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Reduce Gatling noise -->
    <logger name="io.gatling" level="WARN"/>
    <logger name="io.netty" level="WARN"/>

    <!-- Karate Gatling logging - show feature execution -->
    <logger name="io.karatelabs.gatling" level="DEBUG"/>

    <!-- Karate core - enable for debugging -->
    <logger name="io.karatelabs" level="INFO"/>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
